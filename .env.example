# Port the Express app listens on
PORT=3000

# How often to push updates (ms)
TICK_MS=5000

# How many trains to simulate
TRAIN_COUNT=10

# Max number of cars per train
MAX_CARS_PER_TRAIN=12

# Max airway bills per car
MAX_AWBS_PER_CAR=5

# Time scale: how much faster than real world time the sim runs
# 1   = true real time
# 60  = 1 real second = 1 simulated minute
# 120 = 1 real second = 2 simulated minutes
TIME_SCALE=60

# Dwell (stop) time at stations in simulated minutes
MIN_DWELL_MINUTES=5
MAX_DWELL_MINUTES=20
